<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VideoJuego.Views.PlayerSetupPage"
             Title="Jugadores">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="Datos de jugadores" FontSize="24" HorizontalTextAlignment="Center" />
            <Entry Placeholder="Nombre jugador 1" Text="{Binding Player1Name}" />
            <Entry Placeholder="Nombre jugador 2" Text="{Binding Player2Name}" />
            <Button Text="Siguiente" Command="{Binding ContinueCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
