
<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    x:Class="VideoJuego.Resources.Themes.DarkTheme">
    <Color x:Key="PageBackgroundColor">#0F0B1F</Color>
    <Color x:Key="CardBackgroundColor">#19122C</Color>
    <Color x:Key="PrimaryTextColor">#F5F0FF</Color>
    <Color x:Key="SecondaryTextColor">#D1C4E9</Color>
    <Color x:Key="MutedTextColor">#9C8EBF</Color>
    <Color x:Key="AccentPurple">#A78BFA</Color>
    <Color x:Key="AccentPurpleDeep">#7C4DFF</Color>
    <Color x:Key="MenuButtonBackground">#7C4DFF</Color>
    <Color x:Key="MenuButtonSecondaryBackground">#5E35B1</Color>
    <Color x:Key="MenuButtonDisabledBackground">#2E2542</Color>
    <Color x:Key="MenuButtonTextColor">#FFFFFF</Color>
    <Color x:Key="SectionBorderColor">#2F2641</Color>
    <Color x:Key="SectionShadowColor">#000000</Color>

    <Color x:Key="ActionAttackColor">#EF5350</Color>
    <Color x:Key="ActionHealColor">#43A047</Color>
    <Color x:Key="ActionAdvanceColor">#7FDB8B</Color>
    <Color x:Key="ActionRetreatColor">#8D8D8D</Color>
    <Color x:Key="ActionSaveColor">#9575CD</Color>
    <Color x:Key="ActionRestartColor">#FFA726</Color>

    <SolidColorBrush x:Key="PageBackgroundBrush" Color="{StaticResource PageBackgroundColor}" />
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}" />
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}" />
    <SolidColorBrush x:Key="MutedTextBrush" Color="{StaticResource MutedTextColor}" />
    <SolidColorBrush x:Key="AccentPurpleBrush" Color="{StaticResource AccentPurple}" />
    <SolidColorBrush x:Key="AccentPurpleDeepBrush" Color="{StaticResource AccentPurpleDeep}" />
</ResourceDictionary>
